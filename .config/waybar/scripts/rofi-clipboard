#!/usr/bin/env bash
# ðŸŒ¸ Rofi Clipboard History for Hyprland ðŸŒ¸
# Uses cliphist + wl-copy/wl-paste
# Theme: Pink & Blue Hyprland-Inspired

HIST=$(cliphist list | rofi -dmenu \
    -theme ~/.config/rofi/pinkblue-apps.rasi \
    -p "ðŸ“‹ Clipboard History" \
    -matching fuzzy \
    -no-fixed-num-lines \
    -lines 10)

# Exit if nothing selected
[[ -z "$HIST" ]] && exit 0

# Copy selected entry back to clipboard
cliphist decode <<< "$HIST" | wl-copy
notify-send "ðŸ“‹ Copied to clipboard!" "$(cliphist decode <<< "$HIST" | head -c 80)"

